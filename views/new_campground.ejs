<%- include("partials/header") %>

    <div style="margin-top: 30px" class="container">
        <div class="row">
            <div style="width:30%; margin:auto">
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <h1 style="text-align: center" class="h3 mb-3 font-weight-normal">Add New Campground</h1>
                        <input type="text" class="form-control" name="name" placeholder="Campground Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="image" placeholder="Campground Image URL">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="description" placeholder="Add a Description">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary btn-block">Create</button>
                    </div>
                </form>
            </div>

        </div>

    </div>


    <%- include("partials/footer") %>